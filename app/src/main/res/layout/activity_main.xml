    <Button
        android:id="@+id/btn_basier"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="贝塞尔wave"/>

    <Button
        android:id="@+id/btn_animate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
